
@{
    ViewBag.Title = @Resources.Resource.label_more;
}

<div class="page-title">@ViewBag.Title</div>


<div class="container-fluid text-center">
    <div class="more-pages d-flex flex-row justify-content-between container-fluid align-items-center">
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/user-circle.svg" width="32" height="32" />
            </a>
        </div>
        <div class="d-flex align-self-center flex-grow-1 more-page-label">
            @Resources.Resource.label_welcome
        </div>
        <div class="align-self-center">

        </div>
    </div>
    <div class="more-pages d-flex flex-row justify-content-between container-fluid align-items-center" data-action="@Url.Action("ProfileView", "Home")">
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/user-alt.svg" width="32" height="32" />
            </a>
        </div>
        <div class="d-flex align-self-center flex-grow-1 more-page-label">
            @Resources.Resource.label_profile
        </div>
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/right.svg" width="32" height="32" />
            </a>
        </div>
    </div>
    <div class="more-pages d-flex flex-row justify-content-between container-fluid align-items-center" data-action="@Url.Action("FAQs", "Home")">
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/question-mark.svg" width="32" height="32" />
            </a>
        </div>
        <div class="d-flex align-self-center flex-grow-1 more-page-label">
            @Resources.Resource.label_faqs
        </div>
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/right.svg" width="32" height="32" />
            </a>
        </div>
    </div>
    <div class="more-pages d-flex flex-row justify-content-between container-fluid align-items-center" data-action="@Url.Action("Feedback", "Home")">
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/thumbs-up.svg" width="32" height="32" />
            </a>
        </div>
        <div class="d-flex align-self-center flex-grow-1 more-page-label">
            @Resources.Resource.label_feedback
        </div>
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/right.svg" width="32" height="32" />
            </a>
        </div>
    </div>
    <div class="more-pages d-flex flex-row justify-content-between container-fluid align-items-center" data-action="@Url.Action("Logout", "Home")">
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/logout.svg" width="32" height="32" />
            </a>
        </div>
        <div class="d-flex align-self-center flex-grow-1 more-page-label">
            @Resources.Resource.label_logout
        </div>
        <div class="align-self-center">
            <a class="tab" href="#">
                <img src="~/Content/images/right.svg" width="32" height="32" />
            </a>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('.more-pages').click(function () {
        var url = $(this).attr('data-action');

        if (url !== undefined)
            window.location.href = url;
    });
</script>