@model List<KisanEMitra.Models.ChatHistory>

@{
    ViewBag.Title = @Resources.Resource.label_chats;
}

<div class="page-title">@ViewBag.Title</div>

@if (Model.Count > 0)
{
    <div class="chat-container">
        <div id="messageList" class="message-list">
            @foreach (var item in Model)
            {
                <div class="message @item.Alignment">
                    <div class="message-content">
                        @item.Message
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row text-center" style="margin-top: 4vh;">
            <div class="col-12" style="font-size: 4vh; color: #d0d0d0 ">
                @Resources.Resource.label_no_history
            </div>
        </div>
        <div class="row text-center" style="margin-top: 4vh;">
            <div class="col-12">
                <p style="color: #219653">@Resources.Resource.message_no_history</p>
            </div>
        </div>
    </div>

}
