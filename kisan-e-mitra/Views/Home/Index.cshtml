<div class="chat-container">
    <div id="message-list" class="message-list">
        <div id="welcome-message" class="user-msg-left">
            <div class="card text-center" style="border-radius:20px;">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        @Resources.Resource.message_welcome_greeting
                    </p>
                    <p>
                        @Resources.Resource.message_language_selection
