                if (querstionInput) {
                    var userQuery = "<div class='message left user-msg-left'><img src='../Content/images/user.svg' alt='avatar 1' class='rounded-circle' style='width: 45px; height: 100%; background-color:#219653;'><div class='message-content'>" + querstionInput + "</div></div>";
